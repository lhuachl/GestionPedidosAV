@page
@model GestionPedidosAV.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Crear Producto";
}

<!-- Header Section -->
<div class="mb-8">
    <div class="flex items-center">
        <a href="/Products" class="text-neutral-600 hover:text-neutral-900 mr-4 transition-colors duration-200">
            <i class="fas fa-arrow-left text-lg"></i>
        </a>
        <div>
            <h1 class="text-3xl font-bold text-neutral-900">
                <i class="fas fa-plus-circle mr-3 text-primary-600"></i>Crear Producto
            </h1>
            <p class="text-neutral-600 mt-1">Agrega un nuevo producto al inventario</p>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Form -->
    <div class="lg:col-span-2">
        <form method="post" class="space-y-6">
            <!-- Basic Information Card -->
            <div class="bg-white rounded-xl shadow-sm border border-neutral-200">
                <div class="p-6 border-b border-neutral-200">
                    <h3 class="text-lg font-semibold text-neutral-900 flex items-center">
                        <i class="fas fa-info-circle mr-3 text-primary-600"></i>
                        Información Básica
                    </h3>
                </div>
                
                <div class="p-6 space-y-6">
                    <div>
                        <label asp-for="Product.Name" class="block text-sm font-medium text-neutral-700 mb-2">
                            Nombre del Producto <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Product.Name" 
                               class="block w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
                               placeholder="Ej: Laptop HP Pavilion 15">
                        <span asp-validation-for="Product.Name" class="text-red-500 text-sm mt-1"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Product.Description" class="block text-sm font-medium text-neutral-700 mb-2">
                            Descripción
                        </label>
                        <textarea asp-for="Product.Description" 
                                  rows="4"
                                  class="block w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
                                  placeholder="Descripción detallada del producto..."></textarea>
                        <span asp-validation-for="Product.Description" class="text-red-500 text-sm mt-1"></span>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Product.Category" class="block text-sm font-medium text-neutral-700 mb-2">
                                Categoría
                            </label>
                            <input asp-for="Product.Category" 
                                   class="block w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
                                   placeholder="Ej: Electrónicos">
                            <span asp-validation-for="Product.Category" class="text-red-500 text-sm mt-1"></span>
                        </div>
                        
                        <div>
                            <label asp-for="Product.SKU" class="block text-sm font-medium text-neutral-700 mb-2">
                                SKU (Código)
                            </label>
                            <input asp-for="Product.SKU" 
                                   class="block w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
                                   placeholder="Ej: HP-PAV-001">
                            <span asp-validation-for="Product.SKU" class="text-red-500 text-sm mt-1"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pricing and Inventory Card -->
            <div class="bg-white rounded-xl shadow-sm border border-neutral-200">
                <div class="p-6 border-b border-neutral-200">
                    <h3 class="text-lg font-semibold text-neutral-900 flex items-center">
                        <i class="fas fa-dollar-sign mr-3 text-primary-600"></i>
                        Precio e Inventario
                    </h3>
                </div>
                
                <div class="p-6 space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Product.Price" class="block text-sm font-medium text-neutral-700 mb-2">
                                Precio <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <span class="text-neutral-500">$</span>
                                </div>
                                <input asp-for="Product.Price" 
                                       type="number"
                                       step="0.01"
                                       class="block w-full pl-8 pr-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
                                       placeholder="0.00">
                            </div>
                            <span asp-validation-for="Product.Price" class="text-red-500 text-sm mt-1"></span>
                        </div>
                        
                        <div>
                            <label asp-for="Product.Stock" class="block text-sm font-medium text-neutral-700 mb-2">
                                Stock Inicial <span class="text-red-500">*</span>
                            </label>
                            <input asp-for="Product.Stock" 
                                   type="number"
                                   min="0"
                                   class="block w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
                                   placeholder="0">
                            <span asp-validation-for="Product.Stock" class="text-red-500 text-sm mt-1"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Physical Properties Card -->
            <div class="bg-white rounded-xl shadow-sm border border-neutral-200">
                <div class="p-6 border-b border-neutral-200">
                    <h3 class="text-lg font-semibold text-neutral-900 flex items-center">
                        <i class="fas fa-weight mr-3 text-primary-600"></i>
                        Propiedades Físicas
                    </h3>
                </div>
                
                <div class="p-6 space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Product.Weight" class="block text-sm font-medium text-neutral-700 mb-2">
                                Peso
                            </label>
                            <input asp-for="Product.Weight" 
                                   type="number"
                                   step="0.01"
                                   min="0"
                                   class="block w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
                                   placeholder="0.00">
                            <span asp-validation-for="Product.Weight" class="text-red-500 text-sm mt-1"></span>
                        </div>
                        
                        <div>
                            <label asp-for="Product.WeightUnit" class="block text-sm font-medium text-neutral-700 mb-2">
                                Unidad de Peso
                            </label>
                            <select asp-for="Product.WeightUnit" 
                                    class="block w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200">
                                <option value="kg">Kilogramos (kg)</option>
                                <option value="g">Gramos (g)</option>
                                <option value="lb">Libras (lb)</option>
                                <option value="oz">Onzas (oz)</option>
                            </select>
                            <span asp-validation-for="Product.WeightUnit" class="text-red-500 text-sm mt-1"></span>
                        </div>
                    </div>
                    
                    <div>
                        <label asp-for="Product.ImageUrl" class="block text-sm font-medium text-neutral-700 mb-2">
                            URL de Imagen
                        </label>
                        <input asp-for="Product.ImageUrl" 
                               type="url"
                               class="block w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200"
                               placeholder="https://ejemplo.com/imagen.jpg">
                        <span asp-validation-for="Product.ImageUrl" class="text-red-500 text-sm mt-1"></span>
                        <p class="text-xs text-neutral-500 mt-1">
                            URL opcional de la imagen del producto
                        </p>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="bg-white rounded-xl shadow-sm border border-neutral-200">
                <div class="p-6">
                    <div class="flex flex-col sm:flex-row justify-between items-center space-y-3 sm:space-y-0">
                        <div class="text-sm text-neutral-600">
                            <i class="fas fa-info-circle mr-1"></i>
                            Los campos marcados con <span class="text-red-500">*</span> son obligatorios
                        </div>
                        
                        <div class="flex space-x-3">
                            <a href="/Products" 
                               class="bg-neutral-100 hover:bg-neutral-200 text-neutral-700 hover:text-neutral-900 px-6 py-3 rounded-lg font-medium transition-all duration-200">
                                <i class="fas fa-times mr-2"></i>Cancelar
                            </a>
                            
                            <button type="submit" 
                                    class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200 transform hover:scale-105">
                                <i class="fas fa-save mr-2"></i>Crear Producto
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
        <!-- Preview Card -->
        <div class="bg-white rounded-xl shadow-sm border border-neutral-200">
            <div class="p-6 border-b border-neutral-200">
                <h4 class="font-semibold text-neutral-900 flex items-center">
                    <i class="fas fa-eye mr-2 text-neutral-600"></i>
                    Vista Previa
                </h4>
            </div>
            
            <div class="p-6">
                <div class="bg-neutral-100 rounded-lg h-32 mb-4 flex items-center justify-center" id="image-preview">
                    <i class="fas fa-image text-neutral-400 text-2xl"></i>
                </div>
                
                <div class="space-y-2">
                    <h5 id="preview-name" class="font-medium text-neutral-900">Nombre del producto</h5>
                    <p id="preview-category" class="text-sm text-neutral-600">Categoría</p>
                    <div class="flex justify-between items-center">
                        <span id="preview-price" class="text-lg font-bold text-primary-600">$0.00</span>
                        <span id="preview-stock" class="text-sm text-neutral-600">Stock: 0</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tips Card -->
        <div class="bg-gradient-to-br from-blue-50 to-primary-50 rounded-xl border border-blue-200 p-6">
            <h4 class="font-semibold text-neutral-900 mb-3">
                <i class="fas fa-lightbulb text-primary-600 mr-2"></i>
                Consejos
            </h4>
            
            <ul class="space-y-2 text-sm text-neutral-700">
                <li class="flex items-start">
                    <i class="fas fa-check text-green-500 mr-2 mt-0.5 flex-shrink-0"></i>
                    <span>Usa nombres descriptivos y únicos</span>
                </li>
                <li class="flex items-start">
                    <i class="fas fa-check text-green-500 mr-2 mt-0.5 flex-shrink-0"></i>
                    <span>El SKU debe ser único en el sistema</span>
                </li>
                <li class="flex items-start">
                    <i class="fas fa-check text-green-500 mr-2 mt-0.5 flex-shrink-0"></i>
                    <span>Incluye peso para cálculos de envío</span>
                </li>
                <li class="flex items-start">
                    <i class="fas fa-check text-green-500 mr-2 mt-0.5 flex-shrink-0"></i>
                    <span>La imagen mejora la experiencia de compra</span>
                </li>
            </ul>
        </div>

        <!-- Categories Helper -->
        <div class="bg-white rounded-xl shadow-sm border border-neutral-200">
            <div class="p-6 border-b border-neutral-200">
                <h4 class="font-semibold text-neutral-900">Categorías Populares</h4>
            </div>
            
            <div class="p-6">
                <div class="flex flex-wrap gap-2">
                    <span onclick="setCategory('Electrónicos')" class="cursor-pointer bg-neutral-100 hover:bg-primary-100 text-neutral-700 hover:text-primary-700 px-3 py-1 rounded-full text-sm transition-all duration-200">
                        Electrónicos
                    </span>
                    <span onclick="setCategory('Ropa')" class="cursor-pointer bg-neutral-100 hover:bg-primary-100 text-neutral-700 hover:text-primary-700 px-3 py-1 rounded-full text-sm transition-all duration-200">
                        Ropa
                    </span>
                    <span onclick="setCategory('Hogar')" class="cursor-pointer bg-neutral-100 hover:bg-primary-100 text-neutral-700 hover:text-primary-700 px-3 py-1 rounded-full text-sm transition-all duration-200">
                        Hogar
                    </span>
                    <span onclick="setCategory('Deportes')" class="cursor-pointer bg-neutral-100 hover:bg-primary-100 text-neutral-700 hover:text-primary-700 px-3 py-1 rounded-full text-sm transition-all duration-200">
                        Deportes
                    </span>
                    <span onclick="setCategory('Libros')" class="cursor-pointer bg-neutral-100 hover:bg-primary-100 text-neutral-700 hover:text-primary-700 px-3 py-1 rounded-full text-sm transition-all duration-200">
                        Libros
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setCategory(category) {
            document.querySelector('[name="Product.Category"]').value = category;
            updatePreview();
        }
        
        function updatePreview() {
            const name = document.querySelector('[name="Product.Name"]').value || 'Nombre del producto';
            const category = document.querySelector('[name="Product.Category"]').value || 'Categoría';
            const price = document.querySelector('[name="Product.Price"]').value || '0.00';
            const stock = document.querySelector('[name="Product.Stock"]').value || '0';
            const imageUrl = document.querySelector('[name="Product.ImageUrl"]').value;
            
            document.getElementById('preview-name').textContent = name;
            document.getElementById('preview-category').textContent = category;
            document.getElementById('preview-price').textContent = `$${parseFloat(price).toFixed(2)}`;
            document.getElementById('preview-stock').textContent = `Stock: ${stock}`;
            
            const imagePreview = document.getElementById('image-preview');
            if (imageUrl) {
                imagePreview.innerHTML = `<img src="${imageUrl}" alt="Preview" class="w-full h-full object-cover rounded-lg">`;
            } else {
                imagePreview.innerHTML = '<i class="fas fa-image text-neutral-400 text-2xl"></i>';
            }
        }
        
        // Live preview updates
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = ['Product.Name', 'Product.Category', 'Product.Price', 'Product.Stock', 'Product.ImageUrl'];
            
            inputs.forEach(inputName => {
                const input = document.querySelector(`[name="${inputName}"]`);
                if (input) {
                    input.addEventListener('input', updatePreview);
                }
            });
            
            updatePreview();
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}