@page
@model GestionPedidosAV.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Gestión de Productos";
}

<!-- Header Section -->
<div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-3xl font-bold text-neutral-900 mb-2">
                <i class="fas fa-box mr-3 text-primary-600"></i>Gestión de Productos
            </h1>
            <p class="text-neutral-600">Administra el inventario y catálogo de productos</p>
        </div>
        <div class="mt-4 sm:mt-0">
            <a href="/Products/Create" 
               class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200 transform hover:scale-105 inline-flex items-center">
                <i class="fas fa-plus mr-2"></i>
                Agregar Producto
            </a>
        </div>
    </div>
</div>

<!-- Statistics Bar -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-white rounded-lg border border-neutral-200 p-4">
        <div class="flex items-center">
            <div class="bg-primary-100 p-3 rounded-lg">
                <i class="fas fa-box text-primary-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-neutral-600">Total</p>
                <p class="text-2xl font-bold text-neutral-900">@Model.Products.Count</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-lg border border-neutral-200 p-4">
        <div class="flex items-center">
            <div class="bg-green-100 p-3 rounded-lg">
                <i class="fas fa-check-circle text-green-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-neutral-600">Activos</p>
                <p class="text-2xl font-bold text-neutral-900">@Model.Products.Count(p => p.Status == Domain.Enums.ProductStatus.Active)</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-lg border border-neutral-200 p-4">
        <div class="flex items-center">
            <div class="bg-red-100 p-3 rounded-lg">
                <i class="fas fa-exclamation-triangle text-red-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-neutral-600">Stock Bajo</p>
                <p class="text-2xl font-bold text-neutral-900">@Model.Products.Count(p => p.Stock <= 5)</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-lg border border-neutral-200 p-4">
        <div class="flex items-center">
            <div class="bg-yellow-100 p-3 rounded-lg">
                <i class="fas fa-dollar-sign text-yellow-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-neutral-600">Valor Total</p>
                <p class="text-2xl font-bold text-neutral-900">${@Model.Products.Sum(p => p.Price * p.Stock).ToString("N0")}</p>
            </div>
        </div>
    </div>
</div>

<!-- Filters Section -->
<div class="bg-white rounded-xl shadow-sm border border-neutral-200 mb-6">
    <div class="p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <div>
                <label class="block text-sm font-medium text-neutral-700 mb-1">Buscar</label>
                <input type="text" 
                       name="SearchFilter.SearchTerm" 
                       value="@Model.SearchFilter.SearchTerm"
                       placeholder="Nombre o descripción..."
                       class="block w-full px-3 py-2 border border-neutral-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
            </div>
            
            <div>
                <label class="block text-sm font-medium text-neutral-700 mb-1">Categoría</label>
                <input type="text" 
                       name="SearchFilter.Category" 
                       value="@Model.SearchFilter.Category"
                       placeholder="Categoría..."
                       class="block w-full px-3 py-2 border border-neutral-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
            </div>
            
            <div>
                <label class="block text-sm font-medium text-neutral-700 mb-1">Precio Min</label>
                <input type="number" 
                       name="SearchFilter.MinPrice" 
                       value="@Model.SearchFilter.MinPrice"
                       step="0.01"
                       placeholder="0.00"
                       class="block w-full px-3 py-2 border border-neutral-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
            </div>
            
            <div>
                <label class="block text-sm font-medium text-neutral-700 mb-1">Precio Max</label>
                <input type="number" 
                       name="SearchFilter.MaxPrice" 
                       value="@Model.SearchFilter.MaxPrice"
                       step="0.01"
                       placeholder="999.99"
                       class="block w-full px-3 py-2 border border-neutral-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
            </div>
            
            <div class="flex items-end space-x-2">
                <button type="submit" 
                        class="bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 flex-1">
                    <i class="fas fa-search mr-2"></i>Buscar
                </button>
                <a href="/Products" 
                   class="bg-neutral-100 hover:bg-neutral-200 text-neutral-700 px-4 py-2 rounded-lg transition-all duration-200">
                    <i class="fas fa-times"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Products Grid -->
@if (Model.Products.Any())
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        @foreach (var product in Model.Products)
        {
            <div class="bg-white rounded-xl shadow-sm border border-neutral-200 hover:shadow-md transition-all duration-300 transform hover:-translate-y-1">
                <!-- Product Image -->
                <div class="aspect-w-16 aspect-h-9 bg-neutral-100 rounded-t-xl">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" class="w-full h-48 object-cover rounded-t-xl">
                    }
                    else
                    {
                        <div class="w-full h-48 flex items-center justify-center bg-gradient-to-br from-neutral-100 to-neutral-200 rounded-t-xl">
                            <i class="fas fa-box text-neutral-400 text-4xl"></i>
                        </div>
                    }
                    
                    <!-- Status Badge -->
                    <div class="absolute top-3 right-3">
                        @switch (product.Status)
                        {
                            case Domain.Enums.ProductStatus.Active:
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1"></span>
                                    Activo
                                </span>
                                break;
                            case Domain.Enums.ProductStatus.Inactive:
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    <span class="w-1.5 h-1.5 bg-red-500 rounded-full mr-1"></span>
                                    Inactivo
                                </span>
                                break;
                            case Domain.Enums.ProductStatus.Discontinued:
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    <span class="w-1.5 h-1.5 bg-yellow-500 rounded-full mr-1"></span>
                                    Descontinuado
                                </span>
                                break;
                        }
                    </div>

                    <!-- Stock Warning -->
                    @if (product.Stock <= 5)
                    {
                        <div class="absolute top-3 left-3">
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                <i class="fas fa-exclamation-triangle mr-1"></i>
                                Stock Bajo
                            </span>
                        </div>
                    }
                </div>
                
                <!-- Product Info -->
                <div class="p-4">
                    <div class="mb-2">
                        <h3 class="text-lg font-semibold text-neutral-900 truncate">@product.Name</h3>
                        @if (!string.IsNullOrEmpty(product.Category))
                        {
                            <p class="text-sm text-neutral-500">@product.Category</p>
                        }
                    </div>
                    
                    @if (!string.IsNullOrEmpty(product.Description))
                    {
                        <p class="text-sm text-neutral-600 mb-3 line-clamp-2">@product.Description</p>
                    }
                    
                    <div class="flex items-center justify-between mb-3">
                        <div class="text-2xl font-bold text-primary-600">
                            $@product.Price.ToString("N2")
                        </div>
                        <div class="text-right">
                            <div class="text-sm text-neutral-600">Stock</div>
                            <div class="text-lg font-semibold @(product.Stock <= 5 ? "text-red-600" : "text-neutral-900")">
                                @product.Stock
                            </div>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(product.SKU))
                    {
                        <div class="text-xs text-neutral-500 mb-3">
                            SKU: @product.SKU
                        </div>
                    }
                    
                    <!-- Actions -->
                    <div class="flex space-x-2">
                        <a href="/Products/Details/@product.Id" 
                           class="flex-1 bg-blue-100 hover:bg-blue-200 text-blue-700 hover:text-blue-900 py-2 px-3 rounded-lg text-sm font-medium text-center transition-all duration-200">
                            <i class="fas fa-eye mr-1"></i>Ver
                        </a>
                        
                        <a href="/Products/Edit/@product.Id" 
                           class="flex-1 bg-yellow-100 hover:bg-yellow-200 text-yellow-700 hover:text-yellow-900 py-2 px-3 rounded-lg text-sm font-medium text-center transition-all duration-200">
                            <i class="fas fa-edit mr-1"></i>Editar
                        </a>
                        
                        <button onclick="confirmDelete('@product.Id', '@product.Name')" 
                                class="bg-red-100 hover:bg-red-200 text-red-700 hover:text-red-900 py-2 px-3 rounded-lg text-sm font-medium transition-all duration-200">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="bg-white rounded-xl shadow-sm border border-neutral-200 p-12 text-center">
        <div class="bg-neutral-100 rounded-full p-6 w-24 h-24 mx-auto mb-4 flex items-center justify-center">
            <i class="fas fa-box text-neutral-400 text-2xl"></i>
        </div>
        <h4 class="text-lg font-medium text-neutral-900 mb-2">No hay productos</h4>
        <p class="text-neutral-600 mb-4">Comienza agregando productos a tu inventario</p>
        <a href="/Products/Create" class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-2 rounded-lg text-sm font-medium transition-all duration-200 transform hover:scale-105">
            <i class="fas fa-plus mr-2"></i>Agregar primer producto
        </a>
    </div>
}

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl p-6 max-w-md mx-4 transform transition-all duration-300 scale-95" id="modalContent">
        <div class="flex items-center mb-4">
            <div class="bg-red-100 p-3 rounded-full mr-4">
                <i class="fas fa-exclamation-triangle text-red-600 text-xl"></i>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-neutral-900">Confirmar eliminación</h3>
                <p class="text-neutral-600">Esta acción no se puede deshacer</p>
            </div>
        </div>
        
        <p class="text-neutral-700 mb-6">
            ¿Estás seguro de que deseas eliminar el producto <strong id="productNameToDelete"></strong>?
        </p>
        
        <div class="flex justify-end space-x-3">
            <button onclick="closeDeleteModal()" 
                    class="bg-neutral-100 hover:bg-neutral-200 text-neutral-700 hover:text-neutral-900 px-4 py-2 rounded-lg font-medium transition-all duration-200">
                Cancelar
            </button>
            
            <form method="post" id="deleteForm" class="inline">
                <input type="hidden" name="id" id="productIdToDelete">
                <button type="submit" 
                        class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 transform hover:scale-105">
                    <i class="fas fa-trash mr-2"></i>Eliminar
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(productId, productName) {
            document.getElementById('productIdToDelete').value = productId;
            document.getElementById('productNameToDelete').textContent = productName;
            document.getElementById('deleteForm').action = '/Products?handler=Delete';
            
            const modal = document.getElementById('deleteModal');
            const modalContent = document.getElementById('modalContent');
            
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            
            setTimeout(() => {
                modalContent.classList.remove('scale-95');
                modalContent.classList.add('scale-100');
            }, 10);
        }
        
        function closeDeleteModal() {
            const modal = document.getElementById('deleteModal');
            const modalContent = document.getElementById('modalContent');
            
            modalContent.classList.remove('scale-100');
            modalContent.classList.add('scale-95');
            
            setTimeout(() => {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            }, 200);
        }
        
        // Close modal when clicking outside
        document.getElementById('deleteModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeDeleteModal();
            }
        });
        
        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeDeleteModal();
            }
        });
    </script>
}