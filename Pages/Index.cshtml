@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">
            <i class="fas fa-tachometer-alt me-2"></i>Dashboard del Sistema
        </h1>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">@Model.TotalUsers</h4>
                        <p class="card-text">Usuarios</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/Users" class="text-white text-decoration-none">
                    Ver detalles <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">@Model.TotalProducts</h4>
                        <p class="card-text">Productos</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-box fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/Products" class="text-white text-decoration-none">
                    Ver detalles <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">@Model.TotalOrders</h4>
                        <p class="card-text">Pedidos</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clipboard-list fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/Orders" class="text-white text-decoration-none">
                    Ver detalles <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">@Model.PendingOrders</h4>
                        <p class="card-text">Pedidos Pendientes</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/Orders" class="text-white text-decoration-none">
                    Ver detalles <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="row">
    <!-- Recent Orders -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>Pedidos Recientes
                </h5>
                <a href="/Orders" class="btn btn-sm btn-outline-primary">Ver todos</a>
            </div>
            <div class="card-body">
                @if (Model.RecentOrders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Número</th>
                                    <th>Cliente</th>
                                    <th>Fecha</th>
                                    <th>Estado</th>
                                    <th>Total</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td>
                                            <strong>@order.OrderNumber</strong>
                                        </td>
                                        <td>@order.User?.FullName</td>
                                        <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @switch (order.Status)
                                            {
                                                case OrderStatus.Pendiente:
                                                    <span class="badge bg-warning">Pendiente</span>
                                                    break;
                                                case OrderStatus.Procesado:
                                                    <span class="badge bg-info">Procesado</span>
                                                    break;
                                                case OrderStatus.Enviado:
                                                    <span class="badge bg-primary">Enviado</span>
                                                    break;
                                                case OrderStatus.Entregado:
                                                    <span class="badge bg-success">Entregado</span>
                                                    break;
                                                case OrderStatus.Cancelado:
                                                    <span class="badge bg-danger">Cancelado</span>
                                                    break;
                                            }
                                        </td>
                                        <td><strong>$@order.Total.ToString("N2")</strong></td>
                                        <td>
                                            <a href="/Orders/Details/@order.Id" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No hay pedidos recientes</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Low Stock Products -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2 text-warning"></i>Stock Bajo
                </h5>
                <a href="/Products" class="btn btn-sm btn-outline-warning">Ver todos</a>
            </div>
            <div class="card-body">
                @if (Model.LowStockProducts.Any())
                {
                    @foreach (var product in Model.LowStockProducts.Take(5))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3 p-2 border rounded">
                            <div>
                                <strong>@product.Name</strong>
                                <br>
                                <small class="text-muted">@product.Category</small>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-danger">@product.Stock</span>
                            </div>
                        </div>
                    }
                    @if (Model.LowStockProducts.Count > 5)
                    {
                        <div class="text-center">
                            <small class="text-muted">
                                Y @(Model.LowStockProducts.Count - 5) productos más...
                            </small>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                        <p class="text-muted mb-0">Todos los productos tienen stock suficiente</p>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-bolt me-2"></i>Acciones Rápidas
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/Orders/Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Crear Pedido
                    </a>
                    <a href="/Products/Create" class="btn btn-success">
                        <i class="fas fa-box me-2"></i>Agregar Producto
                    </a>
                    <a href="/Users/Create" class="btn btn-info">
                        <i class="fas fa-user-plus me-2"></i>Registrar Usuario
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>