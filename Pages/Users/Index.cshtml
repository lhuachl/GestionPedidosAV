@page
@model GestionPedidosAV.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<!-- Header Section -->
<div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-3xl font-bold text-neutral-900 mb-2">
                <i class="fas fa-users mr-3 text-primary-600"></i>Gestión de Usuarios
            </h1>
            <p class="text-neutral-600">Administra los usuarios del sistema</p>
        </div>
        <div class="mt-4 sm:mt-0">
            <a href="/Users/Create" 
               class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200 transform hover:scale-105 inline-flex items-center">
                <i class="fas fa-user-plus mr-2"></i>
                Crear Usuario
            </a>
        </div>
    </div>
</div>

<!-- Statistics Bar -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-white rounded-lg border border-neutral-200 p-4">
        <div class="flex items-center">
            <div class="bg-primary-100 p-3 rounded-lg">
                <i class="fas fa-users text-primary-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-neutral-600">Total</p>
                <p class="text-2xl font-bold text-neutral-900">@Model.Users.Count</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-lg border border-neutral-200 p-4">
        <div class="flex items-center">
            <div class="bg-red-100 p-3 rounded-lg">
                <i class="fas fa-user-shield text-red-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-neutral-600">Admins</p>
                <p class="text-2xl font-bold text-neutral-900">@Model.Users.Count(u => u.Role == Domain.Enums.UserRole.Admin)</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-lg border border-neutral-200 p-4">
        <div class="flex items-center">
            <div class="bg-blue-100 p-3 rounded-lg">
                <i class="fas fa-user-tie text-blue-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-neutral-600">Empleados</p>
                <p class="text-2xl font-bold text-neutral-900">@Model.Users.Count(u => u.Role == Domain.Enums.UserRole.Empleado)</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-lg border border-neutral-200 p-4">
        <div class="flex items-center">
            <div class="bg-green-100 p-3 rounded-lg">
                <i class="fas fa-user text-green-600"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-neutral-600">Clientes</p>
                <p class="text-2xl font-bold text-neutral-900">@Model.Users.Count(u => u.Role == Domain.Enums.UserRole.Cliente)</p>
            </div>
        </div>
    </div>
</div>

<!-- Filters Section -->
<div class="bg-white rounded-xl shadow-sm border border-neutral-200 mb-6">
    <div class="p-6">
        <form method="get" class="flex flex-col sm:flex-row gap-4">
            <div class="flex-1">
                <label for="searchTerm" class="block text-sm font-medium text-neutral-700 mb-1">Buscar usuarios</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-search text-neutral-400"></i>
                    </div>
                    <input type="text" 
                           id="searchTerm" 
                           name="searchTerm" 
                           value="@Model.SearchTerm"
                           placeholder="Buscar por nombre o email..."
                           class="block w-full pl-10 pr-3 py-2 border border-neutral-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200">
                </div>
            </div>
            
            <div class="sm:w-48">
                <label for="roleFilter" class="block text-sm font-medium text-neutral-700 mb-1">Filtrar por rol</label>
                <select id="roleFilter" 
                        name="roleFilter" 
                        class="block w-full px-3 py-2 border border-neutral-300 rounded-lg focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200">
                    <option value="">Todos los roles</option>
                    <option value="Admin" selected="@(Model.RoleFilter == "Admin")">Administrador</option>
                    <option value="Empleado" selected="@(Model.RoleFilter == "Empleado")">Empleado</option>
                    <option value="Cliente" selected="@(Model.RoleFilter == "Cliente")">Cliente</option>
                </select>
            </div>
            
            <div class="flex gap-2 sm:self-end">
                <button type="submit" 
                        class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-2 rounded-lg font-medium transition-all duration-200 transform hover:scale-105">
                    <i class="fas fa-search mr-2"></i>Buscar
                </button>
                
                <a href="/Users" 
                   class="bg-neutral-100 hover:bg-neutral-200 text-neutral-700 hover:text-neutral-900 px-4 py-2 rounded-lg font-medium transition-all duration-200">
                    <i class="fas fa-times mr-2"></i>Limpiar
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="bg-white rounded-xl shadow-sm border border-neutral-200">
    <div class="p-6 border-b border-neutral-200">
        <h3 class="text-lg font-semibold text-neutral-900">
            Lista de Usuarios
            @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.RoleFilter))
            {
                <span class="text-sm font-normal text-neutral-600">
                    (@Model.Users.Count resultado@(Model.Users.Count != 1 ? "s" : ""))
                </span>
            }
        </h3>
    </div>
    
    @if (Model.Users.Any())
    {
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-neutral-200">
                <thead class="bg-neutral-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Usuario</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Rol</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Estado</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider">Fecha Registro</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-neutral-500 uppercase tracking-wider">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-neutral-200">
                    @foreach (var user in Model.Users)
                    {
                        <tr class="hover:bg-neutral-50 transition-colors duration-150">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="bg-gradient-to-br from-primary-500 to-accent-purple p-2 rounded-full mr-4">
                                        <i class="fas fa-user text-white text-sm"></i>
                                    </div>
                                    <div>
                                        <div class="text-sm font-medium text-neutral-900">@user.FullName</div>
                                        @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                        {
                                            <div class="text-sm text-neutral-500">
                                                <i class="fas fa-phone mr-1"></i>@user.PhoneNumber
                                            </div>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-neutral-900">@user.Email</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @switch (user.Role)
                                {
                                    case Domain.Enums.UserRole.Admin:
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                            <i class="fas fa-user-shield mr-1"></i>Administrador
                                        </span>
                                        break;
                                    case Domain.Enums.UserRole.Empleado:
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            <i class="fas fa-user-tie mr-1"></i>Empleado
                                        </span>
                                        break;
                                    case Domain.Enums.UserRole.Cliente:
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            <i class="fas fa-user mr-1"></i>Cliente
                                        </span>
                                        break;
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (user.IsActive)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1.5"></span>
                                        Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                        <span class="w-1.5 h-1.5 bg-red-500 rounded-full mr-1.5"></span>
                                        Inactivo
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-neutral-900">
                                @user.CreatedAt.ToString("dd/MM/yyyy")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex items-center justify-end space-x-2">
                                    <a href="/Users/Details/@user.Id" 
                                       class="bg-blue-100 hover:bg-blue-200 text-blue-700 hover:text-blue-900 p-2 rounded-lg transition-all duration-200 transform hover:scale-105"
                                       title="Ver detalles">
                                        <i class="fas fa-eye text-sm"></i>
                                    </a>
                                    
                                    <a href="/Users/Edit/@user.Id" 
                                       class="bg-yellow-100 hover:bg-yellow-200 text-yellow-700 hover:text-yellow-900 p-2 rounded-lg transition-all duration-200 transform hover:scale-105"
                                       title="Editar usuario">
                                        <i class="fas fa-edit text-sm"></i>
                                    </a>
                                    
                                    <button onclick="confirmDelete('@user.Id', '@user.FullName')" 
                                            class="bg-red-100 hover:bg-red-200 text-red-700 hover:text-red-900 p-2 rounded-lg transition-all duration-200 transform hover:scale-105"
                                            title="Eliminar usuario">
                                        <i class="fas fa-trash text-sm"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="p-12 text-center">
            <div class="bg-neutral-100 rounded-full p-6 w-24 h-24 mx-auto mb-4 flex items-center justify-center">
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.RoleFilter))
                {
                    <i class="fas fa-search text-neutral-400 text-2xl"></i>
                }
                else
                {
                    <i class="fas fa-users text-neutral-400 text-2xl"></i>
                }
            </div>
            
            @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.RoleFilter))
            {
                <h4 class="text-lg font-medium text-neutral-900 mb-2">No se encontraron usuarios</h4>
                <p class="text-neutral-600 mb-4">Intenta ajustar los filtros de búsqueda</p>
                <a href="/Users" class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-2 rounded-lg text-sm font-medium transition-all duration-200 transform hover:scale-105">
                    <i class="fas fa-times mr-2"></i>Limpiar filtros
                </a>
            }
            else
            {
                <h4 class="text-lg font-medium text-neutral-900 mb-2">No hay usuarios registrados</h4>
                <p class="text-neutral-600 mb-4">Comienza creando el primer usuario del sistema</p>
                <a href="/Users/Create" class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-2 rounded-lg text-sm font-medium transition-all duration-200 transform hover:scale-105">
                    <i class="fas fa-user-plus mr-2"></i>Crear primer usuario
                </a>
            }
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-xl p-6 max-w-md mx-4 transform transition-all duration-300 scale-95" id="modalContent">
        <div class="flex items-center mb-4">
            <div class="bg-red-100 p-3 rounded-full mr-4">
                <i class="fas fa-exclamation-triangle text-red-600 text-xl"></i>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-neutral-900">Confirmar eliminación</h3>
                <p class="text-neutral-600">Esta acción no se puede deshacer</p>
            </div>
        </div>
        
        <p class="text-neutral-700 mb-6">
            ¿Estás seguro de que deseas eliminar al usuario <strong id="userNameToDelete"></strong>?
        </p>
        
        <div class="flex justify-end space-x-3">
            <button onclick="closeDeleteModal()" 
                    class="bg-neutral-100 hover:bg-neutral-200 text-neutral-700 hover:text-neutral-900 px-4 py-2 rounded-lg font-medium transition-all duration-200">
                Cancelar
            </button>
            
            <form method="post" id="deleteForm" class="inline">
                <input type="hidden" name="id" id="userIdToDelete">
                <button type="submit" 
                        class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 transform hover:scale-105">
                    <i class="fas fa-trash mr-2"></i>Eliminar
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(userId, userName) {
            document.getElementById('userIdToDelete').value = userId;
            document.getElementById('userNameToDelete').textContent = userName;
            document.getElementById('deleteForm').action = '/Users?handler=Delete';
            
            const modal = document.getElementById('deleteModal');
            const modalContent = document.getElementById('modalContent');
            
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            
            setTimeout(() => {
                modalContent.classList.remove('scale-95');
                modalContent.classList.add('scale-100');
            }, 10);
        }
        
        function closeDeleteModal() {
            const modal = document.getElementById('deleteModal');
            const modalContent = document.getElementById('modalContent');
            
            modalContent.classList.remove('scale-100');
            modalContent.classList.add('scale-95');
            
            setTimeout(() => {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            }, 200);
        }
        
        // Close modal when clicking outside
        document.getElementById('deleteModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeDeleteModal();
            }
        });
        
        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeDeleteModal();
            }
        });
    </script>
}